<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout"></include>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Header"
        android:src="@mipmap/myself_tt_04"
        />
    <ImageButton
        android:id="@+id/total_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="86dp"
        android:background="@drawable/total_record"
        />
    <ImageButton
        android:id="@+id/obtain_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/obtain_record"
        android:layout_marginLeft="234dp"
        android:layout_marginTop="86dp"
        />
    <ImageButton
        android:id="@+id/expend_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/expend_record"
        android:layout_marginLeft="414dp"
        android:layout_marginTop="86dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/myself_record"
        android:layout_below="@+id/expend_record"
        android:layout_marginLeft="43dp"
        ></ImageView>
    <com.vxiaoxue.weiketang.ui.ScrollListviewDelete
        android:id="@+id/record_listView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="133dp"
        android:layout_marginBottom="43dp"
        style="@style/Scroll"
        android:dividerHeight="5dp"
        android:layout_height="wrap_content">
    </com.vxiaoxue.weiketang.ui.ScrollListviewDelete>
</RelativeLayout>