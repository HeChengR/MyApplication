<?xml version="1.0" encoding="utf-8"?>
<com.vxiaoxue.weiketang.ui.ListItemDelete xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/myself_jf_h" />

        <TextView
            android:id="@+id/reward_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="签到奖励：+5微币"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="450dp"
            android:text="2015-08-21"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:background="@color/red"
            android:text="删除" />
    </LinearLayout>
</com.vxiaoxue.weiketang.ui.ListItemDelete>