<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/store_bg">

    <ImageButton
        android:id="@+id/shop_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shop_return" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="47dp"
        android:orientation="vertical">

        <android.support.v17.leanback.widget.HorizontalGridView
            android:id="@+id/Shop_hgv"
            android:layout_width="397dp"
            android:layout_height="174dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mImageButton_prop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_prop"
                    android:checked="true"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/mImageButton_consumables"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:background="@drawable/shop_consumables"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/mImageButton_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:background="@drawable/shop_coupons"
                    android:button="@null" />


            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>