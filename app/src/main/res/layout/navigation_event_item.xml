<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/event_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/myself_news_p02" />

        <TextView
            android:id="@+id/event_item_title"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/event_item_title"
            android:textColor="@drawable/event_color"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/event_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:text="2015-10-01"
            android:textColor="@drawable/event_color"
            android:textSize="19dp" />

    </LinearLayout>

</RelativeLayout>