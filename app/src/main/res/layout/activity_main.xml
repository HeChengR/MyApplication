<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/index_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:background="@mipmap/index_mine_05"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-2dp"
            android:src="@mipmap/index_mine_01" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <com.vxiaoxue.weiketang.ui.font.TextViewMagic
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/UseName"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:typeFace="ttf.TTF" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@mipmap/index_mine_03">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <com.vxiaoxue.weiketang.ui.font.TextViewMagic
                        android:id="@+id/tv_progress_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progress"
                        android:textColor="@color/progress"
                        android:textSize="11sp"
                        app:typeFace="ttf.TTF" />

                    <RelativeLayout
                        android:id="@+id/iv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="1dp"
                        android:background="@mipmap/index_mine_04">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:text="818/1000"
                            android:textColor="@color/white"
                            android:textSize="8sp" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/medal_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/index_mine_06"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/medal_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/index_mine_06"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/medal_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/index_mine_06"
                    android:visibility="visible" />

                <com.vxiaoxue.weiketang.ui.font.TextViewMagic
                    android:id="@+id/see_medal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/Check_medal"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:typeFace="ttf.TTF" />

            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/personal_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/head_background" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/iv_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="201dp"
        android:background="@drawable/chart_background" />

    <ImageButton
        android:id="@+id/iv_personal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="232dp"
        android:layout_toRightOf="@+id/iv_chart"
        android:background="@drawable/person_background" />

    <ImageButton
        android:id="@+id/iv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="78dp"
        android:layout_toRightOf="@+id/iv_personal_center"
        android:background="@drawable/task_background" />

    <ImageButton
        android:id="@+id/iv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="197dp"
        android:layout_toRightOf="@+id/iv_personal_center"
        android:background="@drawable/shop_background" />

    <ImageButton
        android:id="@+id/iv_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="237dp"
        android:layout_toRightOf="@+id/iv_shop"
        android:background="@drawable/attendance_background" />

</RelativeLayout>
