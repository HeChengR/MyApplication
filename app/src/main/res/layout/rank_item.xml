<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/myself_phb_h_02"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.vxiaoxue.weiketang.ui.font.TextViewMagic
        android:id="@+id/rank_noun"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:text="22"
        android:textColor="@color/yellow"
        android:textSize="17sp"
        android:visibility="gone"
        app:typeFace="rank.ttf" />

    <ImageView
        android:id="@+id/rank_noun_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:src="@mipmap/myself_phb_no_1"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/rank_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:src="@mipmap/myself_phb_pic_01" />

    <com.vxiaoxue.weiketang.ui.font.TextViewMagic
        android:id="@+id/rank_name"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="哥要当海贼王"
        android:textColor="@color/appBlack"
        android:textSize="17sp"
        app:typeFace="ttf.TTF" />

    <com.vxiaoxue.weiketang.ui.font.TextViewMagic
        android:id="@+id/rank_title"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:text="奥数"
        android:textColor="@color/appBlack"
        android:textSize="17sp"
        app:typeFace="ttf.TTF" />

    <com.vxiaoxue.weiketang.ui.font.TextViewMagic
        android:id="@+id/rank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:text="15%"
        android:textColor="@color/appBlack"
        android:textSize="17sp"
        app:typeFace="ttf.TTF" />
</LinearLayout>