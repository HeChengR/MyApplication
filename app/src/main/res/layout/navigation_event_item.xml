<?xml version="1.0" encoding="utf-8"?>
<com.vxiaoxue.weiketang.ui.ListItemDelete xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/myself_news_bg2"
            />
        <ImageView
            android:id="@+id/event_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:src="@mipmap/myself_news_p02"
            />
        <TextView
            android:id="@+id/event_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="40dp"
            android:text="微课糖新大陆火热报名中"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/event_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="470dp"
            android:layout_marginTop="7dp"
            android:text="2015-10-01"
            android:textColor="#000000"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/event_delete"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:text="删除"
            android:background="@color/red"
            />
    </LinearLayout>
</com.vxiaoxue.weiketang.ui.ListItemDelete>